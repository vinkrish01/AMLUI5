	<App>
		<pages>
			<Page showFooter="true" class="amlPage">
				<customHeader>
					<Bar class="amlBar">
						<contentLeft>
						
							
						</contentLeft>
						<contentMiddle>
								<Text text="{i18n>title}" class="amlPagetitle sapUiTinyMarginTop"></Text>
